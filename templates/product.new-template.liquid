    position: relative;
    display: flex;
    align-items: center;
    padding: 20px 24px;
    padding-left: 4.8vw;
    border: 1px solid #CEDCE4;
    border-radius: 10px;
    cursor: pointer;
    margin-bottom: 16px;
  }
  .bundle-product-item.active {
    border: 3px solid #00436C;
  }
  .bundle-product-item > * {
    pointer-events: none;
  }
  .bundle-product-item:before {
    content: '';
    position: absolute;
    left: 20px;
    top: 50%;
    width: 24px;
    height: 24px;
    border: 2px solid #CEDCE4;
    border-radius: 3px;
    transform: translateY(-50%);
  }
  .bundle-product-item:after {
    content: '';
    position: absolute;
    left: 25px;
    top: 50%;
    width: 18px;
    height: 18px;
    background: #00436C;
    border-radius: 2px;
    transform: translateY(-50%);
    display: none;
  }
  .bundle-product-item.active:before {
    border-color: #00436C;
  }
  .bundle-product-item.active:after {
    display: block;
  }
  .bundle-product-item:last-child {
    margin-bottom: 0;
  }
