{% unless block.settings.iconColor contains 'rgba(0,0,0,0)' and block.settings.textColor contains 'rgba(0,0,0,0)' %}
  <style>
    {% unless block.settings.textColor contains 'rgba(0,0,0,0)' %}
    #incart__{{-block.id}} .urgency__text span {
        color: {{block.settings.textColor}};
    }
    {% endunless %}

    {% unless block.settings.iconColor contains 'rgba(0,0,0,0)' %}
    #incart__{{-block.id}} .urgency__text .uil {
        color: {{block.settings.iconColor}};
    }
    {% endunless %}
  </style>
{% endunless %}

<div
  id="incart__{{-block.id}}"
  class="product__urgency {% if block.settings.noMargin %}margin__bottom--reduced{%endif-%}"
  {{ block.shopify_attributes }}
>
  <span class="urgency__text"
    ><span
      data-product="{{product.id}}"
      data-in-cart="{% unless block.settings.customMax != blank %}{{block.settings.max}}{% else %}{{block.settings.customMax}}{% endunless %}"
      data-polling-interval="{{block.settings.interval}}"
      >0</span
    >
    <span>{{ 'product_page.apps.cart' | t }}</span></span
  >
</div>
