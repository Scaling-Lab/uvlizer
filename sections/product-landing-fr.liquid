      // Rastgele bir sayƒ± √ºretin ve bu sayƒ±yƒ± bir oturum (session) deƒüi≈ükenine kaydedin
      var randomValue = Math.floor(Math.random() * (max - min + 1)) + min;
      // Oturum deƒüi≈ükenine deƒüeri atama
      sessionStorage.setItem('randomValue', randomValue);

      // √úretilen rastgele sayƒ±yƒ± kullanabilirsiniz
    document.querySelector('.rqty').innerHTML = randomValue;
  }
}
</script>


