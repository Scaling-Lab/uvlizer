} else {
  var rqtyValue = parseFloat(document.querySelector('.rqty').textContent);

  // .rqty √∂ƒüesinin deƒüeri 251 veya 758 ise rastgele bir sayƒ± √ºretin
  if (rqtyValue >= 251) {
      var min = 251; // Minimum sayƒ±
