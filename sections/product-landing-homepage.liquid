<script>
/* Random number generator */
var randomValue = sessionStorage.getItem('randomValue');

if (randomValue !== null) {
    document.querySelector('.rqty').innerHTML = randomValue;
} else {
  var rqtyValue = parseFloat(document.querySelector('.rqty').textContent);
  
  // .rqty öğesinin değeri 251 veya 758 ise rastgele bir sayı üretin
  if (rqtyValue >= 251) {
      var min = 251; // Minimum sayı
      var max = 758; // Maximum sayı
  
      // Rastgele bir sayı üretin ve bu sayıyı bir oturum (session) değişkenine kaydedin
      var randomValue = Math.floor(Math.random() * (max - min + 1)) + min;
      // Oturum değişkenine değeri atama
      sessionStorage.setItem('randomValue', randomValue);
  
      // Üretilen rastgele sayıyı kullanabilirsiniz
    document.querySelector('.rqty').innerHTML = randomValue;
  }
}
</script>


