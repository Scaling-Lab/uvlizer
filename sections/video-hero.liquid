}

.tele_part {
    text-align: center;
}

.tele_part button {
    border-radius: 5px;
    background: #D53600;
    border: none;
    color: #FFF;
    text-align: center;
    font-family: Poppins;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    padding: 13px 30px;
    margin-bottom: 60px;
}

.image_part {
    background-image: url(https://cdn.shopify.com/s/files/1/0519/0238/2231/files/Voice_interaction_interface_for_AI_product.gif?v=1736552376);
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
}


.image_part:before {
    content: ' ';
    background: linear-gradient(90deg, #000 48.8%, rgba(0, 0, 0, 0.00) 98.94%);
    height: 100%;!I;!;
    width: 200px;
    display: block;
    position: absolute;
    left: -80px;
    top: 0;
}

  .image_part {
    background-position: center;
}

.image_part:after {
    content: ' ';
    background: linear-gradient(90deg, #000 48.8%, rgba(0, 0, 0, 0.00) 98.94%);
    display: block;
    width: 200px;
    height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    background: linear-gradient(90deg, #000 48.8%, rgba(0, 0, 0, 0.00) 98.94%);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    transform: rotate(180deg);
    right: -101px;
}
{% endstyle %}

