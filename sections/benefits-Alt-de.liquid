<style>
    .benefits-section {
        padding: 20px 0;
        margin: 20px 0;
    }

    .benefits-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .benefit-item {
        flex: 1 1 calc(25% - 20px);
        min-width: 200px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .benefit-icon {
        width: 24px;
        height: 24px;
        min-width: 24px;
        min-height: 24px;
        flex: 0 0 24px;
    }

    .benefit-text {
        font-size: 16px;
        color: #333;
    }

    @media screen and (max-width: 768px) {
        .benefits-container {
            gap: 15px;
        }

        .benefit-item {
            flex: 1 1 calc(50% - 15px);
            min-width: 150px;
        }

        .benefit-text {
            font-size: 12px;
        }
    }
</style>

<div class="benefits-section" style="background-color: {{ section.settings.background_color }}">
    <div class="benefits-container">
        {% for block in section.blocks %}
            <div class="benefit-item" {{ block.shopify_attributes }}>
                {% case block.settings.icon %}
                    {% when 'flag' %}
                        <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
                        </svg>
                    {% when 'heart' %}
                        <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                    {% when 'hospital' %}
                        <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                    {% when 'flask' %}
                        <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                        </svg>
                {% endcase %}
                <span class="benefit-text">{{ block.settings.text }}</span>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Benefits Section-Alt-de",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#eceff7"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit Item",
      "limit": 4,
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "flag",
              "label": "Flag"
            },
            {
              "value": "heart",
              "label": "Heart"
            },
            {
              "value": "hospital",
              "label": "Hospital"
            },
            {
              "value": "flask",
              "label": "Flask"
            }
          ]
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Benefit text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Benefits Section Alt",
      "blocks": [
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        }
      ]
    }
  ]
}
{% endschema %}