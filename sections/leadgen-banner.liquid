{{ 'leadgen-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .leadgen {
    background: {{ section.settings.background_color_banner }};
  }

{%- endstyle -%}

<div class="section-{{ section.id }}-padding leadgen__wrapper">
  <div class="leadgen">
    <div class="leadgen__image">
        <img
          src="{{ section.settings.image | image_url: width: 240 }}"
          alt="top banner image"
          width="240"
          height="240"
        >
    </div>
    <h1 class="leadgen__title">
        {{ section.settings.title }}
    </h1>
    <div class="leadgen__text">
        {{ section.settings.sub_text }}
    </div>
    <img src="https://cdn.shopify.com/s/files/1/0519/0238/2231/files/black-friday-badge.png?v=1699280338" alt="Black friday badge" class="leadgen__badge">
    <img src="https://cdn.shopify.com/s/files/1/0519/0238/2231/files/confetti-background.png?v=1699280338" alt="Confetti background" class="leadgen__confetti">
    <div class="klaviyo-form-YikKPq"></div>
  </div>
</div>

<script>
    window._klOnsite = window._klOnsite || [];
    window._klOnsite.push(['openForm', 'YikKPq']);
</script>

{% schema %}
{
  "name": "Leadgen",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Top image"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Early Black Friday: BIGGEST SALE THIS YEAR",
      "label": "Heading text"
    },
    {
      "type": "richtext",
      "id": "sub_text",
      "label": "Sub text"
    },
    {
      "type": "text",
      "id": "button",
      "default": "YES! I WANT IN",
      "label": "Button CTA"
    },
    {
      "type": "color",
      "id": "background_color_banner",
      "label": "Banner background color",
      "default": "#EEF6F8"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Page background color",
      "default": "#EEF6F8"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show title",
      "default": true
    }
  ]
}
{% endschema %}
