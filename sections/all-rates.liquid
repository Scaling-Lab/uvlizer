{% style %}
section.all-rates {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px 0 20px;
    background: #00436C;
}
.all-rates .img-wrapper {
  display: flex;
  align-items: center;
  min-height: 40px;
  margin-bottom: 14px;
}
.all-rates .rate-item {
  margin: 0 60px;
  text-align: center;
  font-size: 14px;
  color: #fff;
  font-weight: 600;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.all-rates .rate-stars {
  position: relative;
  margin-top: 8px;
}
.all-rates .rate-stars .front-stars {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 20px;
  background-size: cover;
}

@media screen and (max-width: 768px) {
  .all-rates .rate-item .rate-stars {
    width: 90px;
  }

  .all-rates .rate-item .rate-stars img {
    max-width: 100%;
    min-height: 100%;
  }

  .all-rates .rate-item .rate-stars .front-stars {
    height: 15.52px;
  }
}
{% endstyle %}

<section class="all-rates">
  {% for block in section.blocks %}
    <div class="rate-item">
      <div class="img-wrapper">
        <img src="{{ block.settings.logo.src | image_url }}">
      </div>
      <span style="color: inherit;">Rated {{ block.settings.rate }}</span>
      {% assign rate = block.settings.rate | times: 20 %}
      <div class="rate-stars">
        <img class="back" src="{{ 'star-review-null-5.svg' | asset_url }}">
        <div class="front-stars" style="background-image: url({{ 'star-review-filled-5.svg' | asset_url }}); width: {{ rate }}%;"></div>
      </div>
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "All Rates",
  "blocks": [
    {
      "type": "rate",
      "name": "Rate",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "text",
          "id": "rate",
          "label": "Rate"
        }
      ]
    }
  ]
}
{% endschema %}