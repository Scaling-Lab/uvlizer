<style>
    .benefits-section {
        padding: 20px 0;
        margin: 20px 0;
    }

    .benefits-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .benefit-item {
        flex: 1 1 calc(25% - 20px);
        min-width: 200px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .benefit-icon {
        width: 24px;
        height: 24px;
        min-width: 24px;
        min-height: 24px;
        flex: 0 0 24px;
    }

    .benefit-text {
        font-size: 16px;
        color: #333;
    }

    @media screen and (max-width: 768px) {
        .benefits-container {
            gap: 15px;
        }

        .benefit-item {
            flex: 1 1 calc(50% - 15px);
            min-width: 150px;
        }
    }
        .benefit-text {
            font-size: 12px;
        }
</style>

<div class="benefits-section" style="background-color: {{ section.settings.background_color }}">
    <div class="benefits-container">
        {% for block in section.blocks %}
            <div class="benefit-item" {{ block.shopify_attributes }}>
                {% case block.settings.icon %}
                    {% when 'check-circle' %}
                        <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    {% when 'star' %}
                        <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                        </svg>
                    {% when 'heart' %}
                        <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                    {% when 'shield' %}
                        <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                {% endcase %}
                <span class="benefit-text">{{ block.settings.text }}</span>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Benefits Section-DE",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#eceff7"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit Item",
      "limit": 4,
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "check-circle",
              "label": "Check Circle"
            },
            {
              "value": "star",
              "label": "Star"
            },
            {
              "value": "heart",
              "label": "Heart"
            },
            {
              "value": "shield",
              "label": "Shield"
            }
          ]
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Benefit text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Benefits Section",
      "blocks": [
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        }
      ]
    }
  ]
}
{% endschema %}
