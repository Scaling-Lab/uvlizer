      "id": "nav_order",
      "label": "Navigation Order Text",
      "default": "Order"
    },
    {
      "type": "text",
      "id": "final_text",
      "label": "Final Text",
      "default": "FINALLY, start enjoying a clean, allergy-free, and sickness-free space"
