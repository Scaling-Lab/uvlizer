<header class="nheader">
  <div class="containern">
    <div id="headertop" class="donly">
      <div class="brand">
        <h2>
          {% if section.settings.brand_logo %}
          <img src="{{ section.settings.brand_logo | img_url: 'master' }}" alt="Brand Logo">
            {% else %}
            <img  src="https://cdn.shopify.com/s/files/1/0519/0238/2231/files/logo-new.png?v=1654107772" >
          {% endif %}
        </h2>
      </div>
      <nav>
        <ul>
          <li><a href="#">{{ section.settings.nav_home }}</a></li>
          <li><a href="#sectionsix" class="back-to-top">{{ section.settings.nav_what_is }}</a></li>
          <li><a href="#benefits" class="back-to-top">{{ section.settings.nav_benefits }}</a></li>
          <li><a href="#reviewsection" class="back-to-top">{{ section.settings.nav_reviews }}</a></li>
          <li><a href="#askquestion" class="back-to-top">{{ section.settings.nav_faq }}</a></li>
          <li><a href="{{ section.settings.order_link }}" class="back-to-top">{{ section.settings.nav_order }}</a></li>
        </ul>
      </nav>
    </div>
    <div id="headerbottom">
      <div class="hbleft">
        <h1>{{ section.settings.headline_text }}</h1>
        <p>{{ section.settings.subheading_text }}</p>
        <p class="first">{{ section.settings.final_text }}</p>
        <p class="bullet-heading"><u>{{ section.settings.bullet_heading1 }}</u>{{ section.settings.bullet_heading2 }}</p>
        <ul>
          {% if section.settings.bullet_point_1 %}<li>{{ section.settings.bullet_point_1 }}</li>{% endif %}
          {% if section.settings.bullet_point_2 %}<li>{{ section.settings.bullet_point_2 }}</li>{% endif %}
          {% if section.settings.bullet_point_3 %}<li>{{ section.settings.bullet_point_3 }}</li>{% endif %}
          {% if section.settings.bullet_point_4 %}<li>{{ section.settings.bullet_point_4 }}</li>{% endif %}
          {% if section.settings.bullet_point_5 %}<li>{{ section.settings.bullet_point_5 }}</li>{% endif %}
        </ul>
        <p>{{ section.settings.right_place_text }}</p>
        <br>
        <a href="#commentreview" class="knowmorebtn back-to-top donly">{{ section.settings.scroll_donly_text }}</a>
        <a href="#mcontent" class="knowmorebtn back-to-top monly">{{ section.settings.scroll_monly_text }}</a>
      </div>
      <div class="hbright">
        {% if section.settings.header_image %}
        <img src="{{ section.settings.header_image }}" alt="Header Image">
        {% else %}
         <img  src="https://cdn.shopify.com/s/files/1/0519/0238/2231/files/image_1264_c2ac5a5d-d8a2-4e1a-bc8d-40a419e4a528.png?v=1711966609" alt="">
        {% endif %}
      </div>
    </div>
  </div>
</header>
