    {
      "type": "text",
      "id": "bullet_point_5",
      "label": "Bullet Point 5",
      "default": "Cleaning your home from top to bottom every couple days"
    },
    {
      "type": "text",
      "id": "right_place_text",
      "label": "Right Place Text",
      "default": "Then youâ€™re in the right place."
